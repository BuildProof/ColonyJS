{
    "name": "@colony/colony-js-adapter-ethers",
    "version": "1.0.0",
    "description": "ColonyContract adapter for ethers.js",
    "main": "lib/index.js",
    "files": [
        "dist",
        "lib",
        "Readme.md"
    ],
    "scripts": {
        "build": "yarn run build:dist && yarn run build:lib && yarn run build:flow",
        "build:dist": "webpack",
        "build:flow": "flow-copy-source src lib --ignore '__tests__/*.js'",
        "build:lib": "babel src --out-dir lib --ignore __tests__",
        "flow": "flow src",
        "lint": "eslint src/{,**/}*.js",
        "precommit": "lint-staged",
        "test": "yarn run lint && yarn run test:unit",
        "test:unit": "jest --coverage --config=jest.conf.json"
    },
    "lint-staged": {
        "src/{,**/}*.js": [
            "lint --fix",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/JoinColony/colony-js.git"
    },
    "keywords": [
        "ethers",
        "web3",
        "colony",
        "api"
    ],
    "author": "Christian Maniewski <chris@colony.io>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/JoinColony/colony-js/issues"
    },
    "homepage": "https://github.com/JoinColony/colony-js#readme",
    "peerDependencies": {
        "ethers": "^2.1.3"
    }
}
