{
    "name": "@colony/colony-js-client",
    "version": "1.0.0",
    "description": "Reference implementation of the Colony API",
    "main": "lib/index.js",
    "files": [
        "dist",
        "lib",
        "Readme.md"
    ],
    "scripts": {
        "build": "yarn run build:dist && yarn run build:lib && yarn run build:flow",
        "build:dist": "webpack",
        "build:flow": "flow-copy-source src lib --ignore '__tests__/*.js'",
        "build:lib": "babel src --out-dir lib --ignore __tests__",
        "flow": "flow src",
        "lint": "eslint src/{,**/}*.js",
        "precommit": "lint-staged",
        "test": "yarn run lint && yarn run test:unit",
        "test:unit": "jest --coverage --config=jest.conf.json"
    },
    "lint-staged": {
        "src/{,**/}*.js": [
            "lint --fix",
            "git add"
        ]
    },
    "author": "Christian Maniewski <chris@colony.io>",
    "license": "MIT",
    "devDependencies": {
        "babel-plugin-dynamic-import-node": "^1.2.0",
        "babel-plugin-syntax-dynamic-import": "^6.18.0"
    },
    "dependencies": {
        "web3-utils": "^1.0.0-beta.26"
    }
}
