{
    "name": "@colony/colony-js-contract-loader-http",
    "version": "1.0.0",
    "description": "Load Ethereum smart contract definitions/metadata over HTTP",
    "main": "lib/index.js",
    "files": [
        "dist",
        "lib",
        "README.md"
    ],
    "scripts": {
        "build": "yarn run clean && yarn run build:dist && yarn run build:lib && yarn run build:flow",
        "build:dist": "webpack",
        "build:flow": "flow-copy-source src lib --ignore '__tests__/*.js'",
        "build:lib": "babel src --out-dir lib --ignore __tests__",
        "clean": "shx rm -rf lib",
        "flow": "flow check",
        "lint": "eslint src/{,**/}*.js",
        "precommit": "lint-staged",
        "prepublish": "yarn run precommit && yarn run build",
        "test": "yarn run lint && yarn run test:unit",
        "test:unit": "jest --coverage --config=jest.conf.json"
    },
    "lint-staged": {
        "src/{,**/}*.js": [
            "lint --fix",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/JoinColony/colonyJS.git"
    },
    "contributors": [
        "Christian Maniewski <chris@colony.io>",
        "James Lefr√®re <james@colony.io>"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/JoinColony/colonyJS/issues"
    },
    "homepage": "https://github.com/JoinColony/colonyJS#readme",
    "dependencies": {
        "@colony/colony-js-contract-loader": "^1.0.0",
        "browser-assert": "^1.2.1",
        "isomorphic-fetch": "^2.2.1"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "chai": "^4.1.2",
        "eslint": "^4.11.0",
        "flow-bin": "^0.72.0",
        "flow-copy-source": "^1.2.1",
        "husky": "^0.14.3",
        "jest": "^22.4.0",
        "jest-fetch-mock": "^1.4.1",
        "jest-sandbox": "^1.1.2",
        "lint-staged": "^7.1.2",
        "webpack": "^4.5.0",
        "webpack-cli": "^2.0.14"
    }
}
