{
  "name": "@colony/colony-sdk",
  "version": "0.1.0",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@colony/colony-js": "^5.0.0-rc.2"
  },
  "devDependencies": {
    "@colony/eslint-config-colony": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "esbuild": "^0.14.27",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "ethers": "^5.6.1",
    "prettier": "^2.6.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typedoc": "^0.22.13",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "ethers": "^5.6.1"
  },
  "scripts": {
    "example:node": "ts-node src/index.ts",
    "example:browser": "esbuild --bundle examples/browser/src/*.ts --servedir=examples/browser/web",
    "build": "npm run clean && npm run compile-cjs && npm run compile-esm && npm run compile-types && npm run build-docs",
    "build-docs": "typedoc --out docs --excludeInternal src/index.ts",
    "clean": "rimraf ./dist",
    "compile-cjs": "tsc -p tsconfig.build.json --module commonjs --outDir dist/cjs",
    "compile-esm": "tsc -p tsconfig.build.json --module es2015 --outDir dist/esm",
    "compile-types": "tsc -p tsconfig.build.json --declaration --emitDeclarationOnly --outDir dist/types",
    "lint": "eslint --ext .ts src examples",
    "prepublishOnly": "npm test && npm run build",
    "test": "npm run lint && npm run typecheck",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": "^16.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/types/index.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ]
}
