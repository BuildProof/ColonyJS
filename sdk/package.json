{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "9.5"
  },
  "scripts": {
    "postinstall": "sh scripts/provision_submodules.sh",
    "deploy-contracts": "cd modules/colonyNetwork && ./node_modules/.bin/truffle migrate --compile-all --reset",
    "start-ganache": "cd modules/colonyNetwork && ganache-cli -d --gasLimit 7000000 --acctKeys ganache-accounts.json --noVMErrorsOnRPCResponse",
    "start-trufflepig": "cd modules/colonyNetwork && trufflepig --ganacheKeyFile ganache-accounts.json",
    "colony-starter": "node scripts/colony_starter.js",
    "test": "lerna run test"
  },
  "devDependencies": {
    "ganache-cli": "^6.1.0",
    "lerna": "^3.0.0-rc.0",
    "trufflepig": "^1.0.4"
  }
}
